<%- layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
    <div class="container mt-3">
        <h1 class="text-center my-4 bg-secondary bg-gradient p-2 shadow-lg text-white border-rounded  ">Friends</h1>
        <% for(let user of friends){ %>
                <% if(passport){ %>
                    <li>
                        <%= user.username %>
                    </li>
                    <a href="/users/<%=  user._id  %>">Profile</a>
                    <hr>
                <% } %>
         <% }%>
         <% if(!friends.length){ %>
            <div class="container my-3">
                <h6 class="text-muted fw-light">No Friends</h6>
                <a  href="/users/add">Add Friends</a>
            </div>
        <% } %>
